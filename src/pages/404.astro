---
import SiteLayout from '../layouts/Layout.astro';

const title = "Page Not Found - 404";
const description = "The page you are looking for does not exist.";
---

<SiteLayout title={title} description={description}>
    <main class="min-h-screen flex flex-col items-center justify-center px-4 text-center">
        <h1 class="text-6xl font-bold mb-4">404</h1>
        <p class="text-xl mb-8">Sorry, the page you are looking for does not exist.</p>
        <a href="/" class="text-blue-600 hover:underline">Go back to the homepage</a>
    </main>
</SiteLayout>